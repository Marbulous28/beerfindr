<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BeerFindr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Saved Beers"
        android:id="@+id/savedBeersButton"
        android:background="@color/colorAccent"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abvEditText"
        android:layout_above="@+id/findBeersButton"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:hint="Enter an ABV."
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:text="Find Beer"
        android:id="@+id/findBeersButton"
        android:background="@color/colorAccent"
        android:layout_marginBottom="85dp"
        android:layout_above="@+id/savedBeersButton"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

